<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#EEEEEE"
    android:layout_marginBottom="10dp"
    tools:context=".ui.ProductCartFragment"
    >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/order_image"
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_weight="0.7"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/background"></ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/order_pname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="Paracetamol"></TextView>
                        <TextView
                            android:id="@+id/order_pprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:text="Price"></TextView>
                        <TextView
                            android:id="@+id/order_pquantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:text="Quantity"></TextView>
                    </LinearLayout>
                            </LinearLayout>
            </androidx.cardview.widget.CardView>
</LinearLayout>
