<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".ui.ProductCartFragment"
    android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/cart_image"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:scaleType="fitXY"
                            android:src="@drawable/background"></ImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/cart_pname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="1dp"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="Paracetamol"></TextView>
                        <TextView
                            android:id="@+id/cart_pprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="1dp"
                            android:textColor="@color/amount"
                            android:textSize="12dp"
                            android:text="Price"></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="@color/light_black"
                                android:padding="1dp"
                                android:id="@+id/product_cost1"
                                android:text="Rs.1025"></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="@color/light_black"
                                android:padding="1dp"
                                android:id="@+id/product_discount1"
                                android:text="30%"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:id="@+id/linearCartrows"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageButton
                                android:layout_gravity="center_vertical"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                    android:padding="10dp"
                                android:background="@color/white"
                                android:src="@drawable/icon_minus"
                                android:id="@+id/minusBtn"
                                >
                            </ImageButton>

                                <EditText
                                    android:id="@+id/cart_quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginHorizontal="5dp"
                                    android:background="@color/white"
                                    android:backgroundTint="@color/white"
                                    android:enabled="false"
                                    android:inputType="number"
                                    android:padding="10dp"
                                    android:text="1"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"></EditText>
                            <ImageButton
                                android:layout_gravity="center_vertical"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@color/white"
                                android:id="@+id/addBtn"
                                android:src="@drawable/icon_plus">
                            </ImageButton>

                            </LinearLayout>
                            <LinearLayout
                                android:gravity="right"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:id="@+id/cart_delete"
                                android:background="@color/white"
                                android:src="@drawable/icon_delete"></ImageButton>
                        </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
</LinearLayout>
