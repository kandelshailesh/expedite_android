<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.ProductCartFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/subscribe_image"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:scaleType="fitXY"
                android:src="@drawable/background"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subscribe_pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Paracetamol"
                    android:textColor="@color/black"
                    android:textSize="16dp"></TextView>

                <TextView
                    android:id="@+id/subscribe_pprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Price"
                    android:textColor="@color/amount"
                    android:textSize="12dp"></TextView>

                <LinearLayout
                    android:id="@+id/linearCartrows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        >

                        <ImageButton
                            android:id="@+id/minusBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/white"
                            android:paddingVertical="10dp"
                            android:src="@drawable/icon_minus"></ImageButton>

                        <EditText
                            android:id="@+id/subscribe_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:backgroundTint="@color/white"
                            android:enabled="false"
                            android:gravity="top"
                            android:inputType="number"
                            android:padding="5dp"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="18dp"></EditText>

                        <ImageButton
                            android:id="@+id/addBtn"
                            android:layout_marginLeft="5dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@color/white"
                            android:src="@drawable/icon_plus"></ImageButton>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right">

                        <ImageButton
                            android:id="@+id/subscriptionDeleteBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:background="@color/white"
                            android:src="@drawable/icon_delete"></ImageButton>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/subscriptionAddBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:text="ADD TO CART"
                    android:textColor="@color/white"></Button>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
